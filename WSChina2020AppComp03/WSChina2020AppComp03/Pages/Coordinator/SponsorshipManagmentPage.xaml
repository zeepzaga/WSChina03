<Page x:Class="WSChina2020AppComp03.Pages.Coordinator.SponsorshipManagmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WSChina2020AppComp03.Pages.Coordinator"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SponsorshipManagmentPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Margin="10" Name="BtnStatistics" Click="BtnStatistics_Click" Height="60" Width="300">Sponsorship Statistics</Button>
            <Button Margin="10" Name="BtnView" Click="BtnView_Click" Height="60" Width="300">Sponsorship View</Button>
            <Button Margin="10" Name="BtnChart" Click="BtnChart_Click" Height="60" Width="300">Sponsorship Chart</Button>
        </StackPanel>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource StyleTblTitle}" Margin="20">Sponsorship Managment</TextBlock>
    </Grid>
</Page>
