<Page x:Class="WSChina2020AppComp03.Pages.Coordinator.CoordinatorMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WSChina2020AppComp03.Pages.Coordinator"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CoordinatorMenuPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" Margin="10">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Margin="10" Name="BtnVolonteer" Click="BtnVolonteer_Click" Height="60" Width="300">Volunteer Managment</Button>
                <Button Margin="10" Name="BtnSponship" Click="BtnSponship_Click" Height="60" Width="300">Sponsorship Managment</Button>
                <Button Margin="10" Name="BtnComp" Click="BtnComp_Click" Height="60" Width="300">Competition Service</Button>
            </StackPanel>
        </Border>
        <TextBlock Style="{StaticResource StyleTblTitle}" HorizontalAlignment="Center">Coordinator Menu</TextBlock>
    </Grid>
</Page>
