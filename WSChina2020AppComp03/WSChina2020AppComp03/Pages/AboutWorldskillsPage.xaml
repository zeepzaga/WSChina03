<Page x:Class="WSChina2020AppComp03.Pages.AboutWorldskillsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WSChina2020AppComp03.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AboutWorldskillsPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock HorizontalAlignment="Center" Style="{StaticResource StyleTblTitle}" >About Worldskills</TextBlock>
            <Button x:Name="BtnHistoryWs" Click="BtnHistoryWs_Click" Height="60" Width="220" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">History of Worldskills</Button>
            <Button x:Name="BtnCompetition" Click="BtnCompetition_Click" Height="60" Width="220" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">Competition Skills</Button>
            <Button x:Name="BtnPrCom" Click="BtnPrCom_Click" Height="60" Width="220" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">Previous Competitions</Button>
        </StackPanel>
    </Grid>
</Page>
