<Page x:Class="WSChina2020AppComp03.Pages.Admin.AdministratorMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WSChina2020AppComp03.Pages.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdministratorMenuPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" Margin="10">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Width="500" Text="{Binding HelloPerson}" Style="{StaticResource StyleTblTitle}" TextAlignment="Center" TextWrapping="Wrap"></TextBlock>
                <Button x:Name="BtnEvent" Click="BtnEvent_Click" Margin="10" Height="60" Width="300">Event Managment</Button>
                <Button x:Name="BtnComp" Click="BtnComp_Click"  Margin="10" Height="60" Width="300">Competitor Managment</Button>
            </StackPanel>
        </Border>
        <TextBlock Style="{StaticResource StyleTblTitle}" HorizontalAlignment="Center">Administrator Menu</TextBlock>
    </Grid>
</Page>
