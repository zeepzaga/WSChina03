<Page x:Class="WSChina2020AppComp03.Pages.Admin.RegisterCompetitiorIndividualSkillsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WSChina2020AppComp03.Pages.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="RegisterCompetitiorIndividualSkillsPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Style="{StaticResource StyleTblTitle}" HorizontalAlignment="Center">Registrer Competitior-Individual Skills</TextBlock>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Grid.Row="1">
            <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" Margin="0 0 5 0">
                <StackPanel Orientation="Horizontal">
                    <StackPanel>
                        <StackPanel Margin="10" HorizontalAlignment="Right" Orientation="Horizontal">
                            <TextBlock TextAlignment="Right" Style="{StaticResource StyleTbBody}" FontWeight="Bold" TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Width="100">Competitior Number:</TextBlock>
                            <TextBox x:Name="TbCompetitorNumber" VerticalAlignment="Center" IsEnabled="False"></TextBox>
                        </StackPanel>
                        <StackPanel Margin="10" HorizontalAlignment="Right" Orientation="Horizontal">
                            <TextBlock TextAlignment="Right" Style="{StaticResource StyleTbBody}" FontWeight="Bold" TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Width="100">IdNumber:</TextBlock>
                            <TextBox TextChanged="TbIdNumber_TextChanged" x:Name="TbIdNumber" VerticalAlignment="Center"></TextBox>
                        </StackPanel>
                        <StackPanel Margin="10" HorizontalAlignment="Right" Orientation="Horizontal">
                            <TextBlock TextAlignment="Right" Style="{StaticResource StyleTbBody}" FontWeight="Bold" TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Width="100">Name:</TextBlock>
                            <TextBox x:Name="TbName" VerticalAlignment="Center" IsEnabled="True"></TextBox>
                        </StackPanel>
                        <StackPanel Margin="10" HorizontalAlignment="Right" Orientation="Horizontal">
                            <TextBlock TextAlignment="Right" Style="{StaticResource StyleTbBody}" FontWeight="Bold" TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Width="100">Gender:</TextBlock>
                            <TextBlock x:Name="TblGender" Style="{StaticResource StyleTbBody}" Width="150" VerticalAlignment="Center" IsEnabled="False"></TextBlock>
                        </StackPanel>
                        <StackPanel Margin="10" HorizontalAlignment="Right" Orientation="Horizontal">
                            <TextBlock TextAlignment="Right" Style="{StaticResource StyleTbBody}" FontWeight="Bold" TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Width="120">Date Of Birth:</TextBlock>
                            <TextBlock x:Name="TblBirh" Style="{StaticResource StyleTbBody}" Width="150" VerticalAlignment="Center" IsEnabled="False"></TextBlock>
                        </StackPanel>
                        <StackPanel Margin="10" HorizontalAlignment="Right" Orientation="Horizontal">
                            <TextBlock TextAlignment="Right" Style="{StaticResource StyleTbBody}" FontWeight="Bold" TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Width="120">Province:</TextBlock>
                            <ComboBox Name="CbProvince" DisplayMemberPath="Name" Width="150" VerticalAlignment="Center"></ComboBox>
                        </StackPanel>
                        <StackPanel Margin="10" HorizontalAlignment="Right" Orientation="Horizontal">
                            <TextBlock TextAlignment="Right" Style="{StaticResource StyleTbBody}" FontWeight="Bold" TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Width="120">Email:</TextBlock>
                            <TextBox x:Name="TbEmail" Width="150" VerticalAlignment="Center"></TextBox>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel VerticalAlignment="Center">
                        <StackPanel Margin="10" HorizontalAlignment="Right" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource StyleTbBody}" FontWeight="Bold">Phone:</TextBlock>
                            <TextBox x:Name="TbPhone"></TextBox>
                        </StackPanel>
                        <StackPanel Margin="10" HorizontalAlignment="Right" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource StyleTbBody}" FontWeight="Bold">Organization:</TextBlock>
                            <TextBox x:Name="TbOrganization"></TextBox>
                        </StackPanel>
                        <StackPanel Margin="10" HorizontalAlignment="Right" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource StyleTbBody}" FontWeight="Bold">Contact Address:</TextBlock>
                            <TextBox x:Name="TbAddress"></TextBox>
                        </StackPanel>
                        <Border Background="Transparent" Width="300" BorderBrush="Black" BorderThickness="1" Margin="10" Height="Auto">
                            <Image Source="{Binding}" Height="150" x:Name="ImgPgoto" Width="300" Margin="0"></Image>
                        </Border>
                        <StackPanel Margin="10" HorizontalAlignment="Center" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource StyleTbBody}" FontWeight="Bold">Photo:</TextBlock>
                            <TextBox x:Name="TbPhoto" IsReadOnly="True"></TextBox>
                            <Button Margin="5" Name="BtnBrowse" Click="BtnBrowse_Click" Width="100">Browse</Button>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
            <StackPanel>
                <Border Height="300" BorderThickness="1" BorderBrush="Black">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock HorizontalAlignment="Center" x:Name="TblEvent" Style="{StaticResource StyleTbBody}" Width="320"></TextBlock>
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource StyleTbBody}" FontWeight="Bold">Skill:</TextBlock>
                            <TextBlock x:Name="TblSkills" Style="{StaticResource StyleTbBody}" Width="260"></TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button x:Name="BtnRegister" Click="BtnRegister_Click" Margin="10" Width="100" Height="30">Register</Button>
                    <Button x:Name="BtnCancel" Click="BtnCancel_Click" Margin="10" Width="100" Height="30">Cancel</Button>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
